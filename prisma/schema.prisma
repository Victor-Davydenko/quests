datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Quest {
  id             Int     @id @default(autoincrement())
  title          String
  description    String
  previewImg     String
  coverImg       String
  type           String
  level          String
  peopleCount    Int[]
  duration       Int
  translationKey String?
}

model Order {
  id          Int     @id @default(autoincrement())
  name        String
  peopleCount Int
  phone       String
  isLegal     Boolean
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  Session  Session[]
}

model Session {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}
